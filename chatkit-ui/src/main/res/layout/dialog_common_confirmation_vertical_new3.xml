<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llCommonConfirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDialogImage"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/avatar_size_in_profile"
            android:layout_height="wrap_content"
            android:src="@drawable/img_avatar"/>

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_8_dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_8_dp"
            android:textColor="@color/grey_medium2"
            android:textSize="15sp"
            tools:text="Subtitle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPositive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16_dp"
            android:layout_marginEnd="@dimen/dimen_16_dp"
            android:layout_marginBottom="@dimen/dimen_16_dp"
            android:background="@drawable/solid_bg_blue_xr"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dimen_64_dp"
            android:paddingEnd="@dimen/dimen_64_dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:text="Confirm" />

        <TextView
            android:id="@+id/btnNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16_dp"
            android:padding="@dimen/dimen_16_dp"
            android:textColor="@color/themeColor_red"
            android:textSize="14sp"
            tools:text="@string/text_not_now"
            tools:visibility="visible" />

    </LinearLayout>

</RelativeLayout>