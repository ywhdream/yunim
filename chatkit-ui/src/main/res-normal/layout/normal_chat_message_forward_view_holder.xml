<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageForwardLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/dimen_6_dp"
    android:layout_marginTop="@dimen/dimen_6_dp"
    android:layout_marginBottom="@dimen/dimen_3_dp">

    <TextView
        android:id="@+id/messageMultiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:paddingHorizontal="@dimen/dimen_16_dp"
        android:paddingVertical="@dimen/dimen_12_dp"
        android:ellipsize="middle"
        android:textColor="@color/color_333333"
        tools:text="@tools:sample/lorem"
        android:singleLine="true" />
    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:paddingHorizontal="@dimen/dimen_16_dp"
        android:textColor="@color/color_999999"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="@tools:sample/lorem" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:alpha="0.3"
        android:background="#aaaaaa"/>

    <TextView
        android:id="@+id/messageRecordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14"
        android:paddingHorizontal="@dimen/dimen_16_dp"
        android:paddingVertical="@dimen/dimen_8_dp"
        android:textColor="@color/color_999999"
        tools:text="@tools:sample/lorem"
        android:text="@string/chat_message_multi_record"/>
    <androidx.constraintlayout.widget.Placeholder
        android:id="@+id/place_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</LinearLayout>